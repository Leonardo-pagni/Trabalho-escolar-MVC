<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carteira de Gestão</title>

    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', {packages: ['corechart', 'bar']});
google.charts.setOnLoadCallback(drawBasic);

function drawBasic() {

      var data = new google.visualization.DataTable();
      data.addColumn('timeofday', 'Time of Day');
      data.addColumn('number', 'Gastos');

      data.addRows([
        [{v: [8, 0, 0], f: 'Junho'}, 1],
        [{v: [9, 0, 0], f: 'Julho'}, 2],
        [{v: [10, 0, 0], f:'Agosto'}, 3],
        [{v: [11, 0, 0], f: 'Setembro'}, 4],
        [{v: [12, 0, 0], f: 'Outubro'}, 5],
        [{v: [13, 0, 0], f: 'Novembro'}, 6],
      ]);

      var options = {
        width: 400,
  height: 240,
        hAxis: {
          title: 'Gastos nos ultimos 6 meses',
          format: '',
          viewWindow: {
          }
        },
      };

      var chart = new google.visualization.ColumnChart(
        document.getElementById('chart_div'));

      chart.draw(data, options);
    }
    </script>
</head>
<body>
    <div class="container">

        <hr>
        <div class="conteudo">

            <h1>Bem vindo</h1>
            <h2>Saldo: </h2>

            <div class="gastos-despesas">
                <h1>Gastos e despesas</h1>
                <div class="credito-debito">
                    <div class="credito">
                        <h1>Crédito</h1>
                        <div class="caixa">
                            <h1 id="">@ViewBag.Credito</h1>
                        </div>
                    </div>
                    <div class="debito">
                        <h1>Débito</h1>
                        <div class="caixa">
                            <h1 id="">@ViewBag.Debito</h1>
                        </div>
                    </div>
                </div>
                <div class="grafico">
                    <div id="chart_div" />
                </div>
            </div>

        </div>
        <div class="footer">

        </div>
    </div>
</body>
</html>